@model SaleUpdateViewModel
@{
    ViewData["Title"] = "Satış Kaydı Düzenle";
}

<form asp-controller="Sale" asp-action="Update" method="post"> 
<input type="hidden" asp-for=UpdatedAt/>
<div class="page-header d-flex justify-content-between">
     <h3 class="fw-bold mb-3">Satış Kaydı Güncelleme</h3> 
<div>
    <button type="submit"class="btn btn-success btn-icon btn-round" title="Kaydet">
      <i class="fas fa-save"></i>
      </button>
      <a asp-controller="Sale" asp-action="Index" class="btn btn-warning btn-icon btn-round"title="Vazgeç">
      <i class="fa fa-window-close"></i>
      </a>    
     </div>
   </div>
    <div class="row">
      <div class="col-md-12 ">
                <div class="card">
                  <div class="card-body">
                <div class="text-danger" asp-validation-summary="All"></div>
                      <div class="col-md-6">
            <div class="card">
                  <div class="card-body">
                <div class="row">
                <div class="form-group col-md-4">
                <label asp-for=Quantity></label>
                <input asp-for=Quantity class="form-control form-control-lg"/>
                </div>
                
                <div class="form-group col-md-4">
                <label asp-for=UnitPrice></label>
                <input asp-for=UnitPrice class="form-control form-control-lg">
                </input>
                </div>
                <div class="form-group col-md-12">
                <label asp-for=ProductList></label>
                <select asp-items=@Model.ProductList asp-for=ProductId class="form-select form-control-lg" id="largeSelect"></select>
                </div>
                <div class="form-group col-md-12">
                <label asp-for=CustomerList></label>
                <select asp-items=@Model.CustomerList asp-for=CustomerId class="form-select form-control-lg" id="largeSelect"></select>
                </div>
                </div> 
                 <div class="col-md-12 ">
        <div class="form-group text-start">
         <span class="text-primary lead">Son Güncelleme Tarihi:</span>
         <span class="lead">@(Model.UpdatedAt==null ? "Bu satış kaydı henüz güncellenmemiştir":
             Model.UpdatedAt)</span>
            </div>
        </div>  
                
        </div>  
        </div>
       
        <div class="form-group text-end">
        <button type="submit"class="btn btn-success btn-icon btn-round"title="Kaydet">
         <i class="fas fa-save"></i>
        </button>
        </div> 
       
        </div>
                </div>
                </div>
      
            </div>
      
        </div>    
        </div>
         </div>   
</form>
